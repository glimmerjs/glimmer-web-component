  "compilerOptions": {
    "target": "es2017",
    "module": "es2015",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "inlineSources": true,
    "inlineSourceMap": true,
    "noUnusedLocals": true,
    "strict": true,
    "declaration": true,
    "newLine": "LF",
    "outDir": "dist",
    "lib": [
      "dom",
      "es2015"
    ]
